<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marker Description placeholder"
        android:id="@+id/tvMarkerDescription"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true" />



    <TextView
        android:id="@+id/tvMarkerAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address: Address"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvMarkerLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lat: {{lat}}"
        android:layout_marginStart="25dp"
        android:layout_marginTop="100dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvMarkerLng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lng: {{lng}}"
        android:layout_marginStart="25dp"
        android:layout_marginTop="120dp" />

    <ImageButton
        android:id="@+id/ibToMapLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_marker"
        android:background="?android:selectableItemBackground"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/ibDeleteMarker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        android:background="?android:selectableItemBackground"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="40dp"
        android:layout_alignParentEnd="true" />
</RelativeLayout>